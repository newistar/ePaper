<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    </WebView>

    <android.support.v7.widget.CardView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/amarujala"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#F44336"
                    android:onClick="onClick"
                    android:layout_margin="5dp">
                    <TextView
                        android:text="Amar Ujala"
                        style="@style/TextStyle" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/dainikjagran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#E91E63"
                    android:onClick="onClick"
                    android:layout_margin="5dp">
                    <TextView
                        android:text="Dainik Jagran"
                        style="@style/TextStyle" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/haribhui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#9C27B0"
                    android:onClick="onClick"
                    android:layout_margin="5dp">
                    <TextView
                        android:text="HariBhumi"
                        style="@style/TextStyle" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/dainikbhaskar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#673AB7"
                    android:onClick="onClick"
                    android:layout_margin="5dp">
                    <TextView
                        android:text="Dainik Bhaskar"
                        style="@style/TextStyle" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/hindustan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#3F51B5"
                    android:onClick="onClick"
                    android:layout_margin="5dp">
                    <TextView
                        android:text="Hindustan"
                        style="@style/TextStyle" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/jansatta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#2196F3"
                    android:onClick="onClick"
                    android:layout_margin="5dp">
                    <TextView
                        android:text="JanSatta"
                        style="@style/TextStyle" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/loktej"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#03A9F4"
                    android:onClick="onClick"
                    android:layout_margin="5dp">
                    <TextView
                        android:text="Loktej"
                        style="@style/TextStyle" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/naidunia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#00BCD4"
                    android:onClick="onClick"
                    android:layout_margin="5dp">
                    <TextView
                        android:text="Nai Dunia"
                        style="@style/TextStyle" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/navbharattimes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#009688"
                    android:onClick="onClick"
                    android:layout_margin="5dp">
                    <TextView
                        android:text="Nav Bharat Times"
                        style="@style/TextStyle" />

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/prabhatkhabar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#4CAF50"
                    android:onClick="onClick"
                    android:layout_margin="5dp">
                    <TextView
                        android:text="Prabhat Khabar"
                        style="@style/TextStyle" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/punjabkesari"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#FF9800"
                    android:onClick="onClick"
                    android:layout_margin="5dp">
                    <TextView
                        android:text="Punjab Kesari"
                        style="@style/TextStyle" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/patrika"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#607D8B"
                    android:onClick="onClick"
                    android:layout_margin="5dp">
                    <TextView
                        android:text="Patrika"
                        style="@style/TextStyle" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>

</LinearLayout>